<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chooser_body"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Dark_Purple"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_medium" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp" >

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
		android:layout_weight="4"
        android:layout_margin="15dp" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ToggleButton
                android:id="@+id/akb_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_akb"
                android:textOff=" "
                android:textOn=" " />

            <ToggleButton
                android:id="@+id/ske_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_ske"
                android:textOff=" "
                android:textOn=" " />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"  >

            <ToggleButton
                android:id="@+id/nmb_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_nmb"
                android:textOff=" "
                android:textOn=" " />

            <ToggleButton
                android:id="@+id/hkt_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_hkt"
                android:textOff=" "
                android:textOn=" " />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ToggleButton
                android:id="@+id/jkt_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_jkt"
                android:textOff=" "
                android:textOn=" " />

            <ToggleButton
                android:id="@+id/snh_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_snh"
                android:textOff=" "
                android:textOn=" " />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ToggleButton
                android:id="@+id/ngzk_toggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/toogle_ngzk"
                android:textOff=" "
                android:textOn=" " />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <RadioGroup
                android:id="@+id/gamemode"
                style="@style/win8_radioGroup_v"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1" >

                <RadioButton
                    android:id="@+id/gamemode_normal"
                    style="@style/win8_radioButton_v"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/gamemode_normal" />

                <RadioButton
                    android:id="@+id/gamemode_challenge"
                    style="@style/win8_radioButton_v"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/gamemode_challenge" />
            </RadioGroup>

            <ImageButton
                android:id="@+id/game_start"
                style="@style/win8_button_large"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_win8_coral"
                android:contentDescription="@string/menu_start_game"
                android:src="@drawable/play_ico" />
        </TableRow>

    </TableLayout>

</LinearLayout>