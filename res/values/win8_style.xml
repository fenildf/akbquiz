<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="win8_button_large">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="win8_button_middle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="win8_button_small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="win8_toggleButton">
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/toggle_win8</item>
    </style>
    <style name="win8_seekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:minHeight">20dp</item>
        <item name="android:progressDrawable">@drawable/progress_win8</item>
        <item name="android:thumb">@drawable/progress_thumb_win8</item>
        <item name="android:thumbOffset">0dp</item>
    </style>
    <style name="win8_radioGroup">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="win8_radioGroup_v">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="win8_radioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/radio_win8</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
   </style>
   <style name="win8_radioButton_v">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/radio_win8_v</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
   </style>
</resources>